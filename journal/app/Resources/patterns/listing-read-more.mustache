<div class="wrapper listing-read-more{{#allRelated}} listing-read-more--all-related{{/allRelated}}">

  <div class="grid">

    <div class="content-container grid__item
              one-whole
              large--ten-twelfths
              push--large--one-twelfth
              x-large--eight-twelfths
              push--x-large--two-twelfths
              grid-column">

      {{#heading}}
        <div class="listing-list-heading">
          {{> patterns/list-heading}}
        </div>
      {{/heading}}

      <ol class="listing-list listing-list--read-more"{{#id}} id="{{id}}"{{/id}}>
        {{#items}}
          {{> patterns/read-more-item }}
        {{/items}}

        {{#seeMoreLink}}
          <li class="listing-list__item">
            {{> patterns/see-more-link}}
          </li>
        {{/seeMoreLink}}
      </ol>

      {{#pagination}}
        {{> patterns/pager}}
      {{/pagination}}

    </div>

  </div>

</div>
